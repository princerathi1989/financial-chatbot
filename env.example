# Financial Multi-Agent Chatbot - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (Optional, default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# OpenAI Embedding Model (Optional, default: text-embedding-3-small)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# LangSmith Configuration (Optional - for tracing and monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=financial-chatbot
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1
RELOAD=false

# Storage Paths
CHROMA_PERSIST_DIRECTORY=./storage/chroma_db
UPLOAD_DIRECTORY=./storage/uploads

# File Upload Settings
MAX_FILE_SIZE_MB=50
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Agent Settings
RAG_TOP_K_RESULTS=5
SUMMARY_MAX_LENGTH=500
MCQ_NUM_QUESTIONS=5
ANALYTICS_CONFIDENCE_THRESHOLD=0.8

# Vector Store Configuration (Pinecone only)
VECTOR_STORE_TYPE=pinecone

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=financial-documents
PINECONE_METRIC=cosine

# Database Configuration (in-memory only for session-based processing)
DATABASE_TYPE=memory