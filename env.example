# Financial Multi-Agent Chatbot - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Key (Required)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Model (Optional, default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# OpenAI Embedding Model (Optional, default: text-embedding-3-small)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# LangSmith Configuration (Optional - for tracing and monitoring)
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_PROJECT=financial-chatbot
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# Application Settings
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1
RELOAD=false

# Storage Paths
CHROMA_PERSIST_DIRECTORY=./storage/chroma_db
UPLOAD_DIRECTORY=./storage/uploads

# File Upload Settings
MAX_FILE_SIZE_MB=50
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Agent Settings
RAG_TOP_K_RESULTS=5
SUMMARY_MAX_LENGTH=500
MCQ_NUM_QUESTIONS=5
ANALYTICS_CONFIDENCE_THRESHOLD=0.8

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///./financial_chatbot.db

# PostgreSQL Configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=financial_chatbot

# MongoDB Configuration (if using MongoDB)
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_DATABASE_NAME=financial_chatbot

# Storage Configuration
CHROMA_PERSIST_DIRECTORY=./storage/chroma_db
UPLOAD_DIRECTORY=./storage/uploads

# Vector Store Configuration (default: pinecone)
VECTOR_STORE_TYPE=pinecone

# Pinecone Configuration (Vector Database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1
PINECONE_INDEX_NAME=financial-documents
PINECONE_METRIC=cosine

# Cloud Storage Configuration (default: local)
STORAGE_TYPE=local

# Database Configuration (default: sqlite)
DATABASE_TYPE=sqlite

# =============================================================================
# CLOUD CONFIGURATION (Required for Production)
# =============================================================================

# Zilliz Cloud Configuration (Vector Database)
ZILLIZ_URI=https://your-cluster.zillizcloud.com
ZILLIZ_TOKEN=your_zilliz_token_here

# Azure Blob Storage Configuration (File Storage)
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_CONTAINER_NAME=financial-documents
AZURE_BLOB_TIER=Hot
AZURE_BLOB_TYPE=BlockBlob

# AWS S3 Configuration (File Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# MongoDB Atlas Configuration (Metadata Storage)
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority